var pWidth=Ti.Platform.displayCaps.platformWidth,pHeight=Ti.Platform.displayCaps.platformHeight,rowCount=4,margin=5,size=(pWidth-margin*(rowCount+1))/rowCount,globalOrientation=[Ti.UI.PORTRAIT,Ti.UI.LANDSCAPE_LEFT,Ti.UI.LANDSCAPE_RIGHT],imageWin=Ti.UI.createWindow({title:"Search Results",backButtonTitle:"Back",backgroundColor:"#333333"}),buildUi=function(e){for(var i=Ti.UI.createScrollView({width:pWidth,height:pHeight-70,contentWidth:pWidth,layout:"horizontal",showVerticalIndicator:!0}),a=0;a<e.length;a++){var t=Ti.UI.createView({width:size,height:size,left:margin,top:margin,borderRadius:10}),o=Ti.UI.createImageView({image:e[a].preview,title:"Image",top:0,width:2*size,height:2*size,fullImage:e[a].fullImage});t.add(o),i.add(t)}imageWin.add(i),exports.viewContainer=i,i.addEventListener("click",function(e){showFullImage(e.source)})};exports.buildUi=buildUi,exports.imageWin=imageWin;