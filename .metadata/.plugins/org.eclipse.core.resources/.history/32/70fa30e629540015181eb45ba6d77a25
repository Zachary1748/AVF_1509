var infoWin = Ti.UI.createWindow({
	backgroundColor: mainWindow.backgroundColor,
	layout: "vertical"
});

var infoView = Ti.UI.createView({
	backgroundColor: tempView.backgroundColor,
	top: 20, left: 0, right: 0
});

var infoText = Ti.UI.createLabel({
	text: "",
	left: 20, right: 20,
	color: "#333333"
});
infoView.add(infoView);

var closeView = Ti.UI.createView({
	backgroundColor: "#333333",
	height: 50, bottom: 0, left: 0, right: 0
});

var closeText = Ti.UI.createLabel({
	top: 10,
	text: "Close",
	color: "#FFFFFF"
});
closeView.add(closeLabel);

infoWin.add(infoView, closeView);
infoWin.open();
exports.infoText = infoText;