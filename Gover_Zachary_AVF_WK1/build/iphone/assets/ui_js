var mainWin=Ti.UI.createWindow({background:"#333333",layout:"vertical"}),tempView=Ti.UI.createView({left:0,right:0,background:"#ededed",top:20}),tempText=Ti.UI.createLabel({text:"?",top:10,color:"#FFFFFF",font:{fontSize:24,fontFamily:"Arial"}});tempView.add(tempText);var updateView=function(e){tempText.text=e.temp};mainWin.add(tempView),mainWin.open();